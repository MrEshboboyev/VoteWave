@model OptionDto

<tr id="option-@Model.Id">
    <td>
        <span class="option-text">@Model.Text</span>
        <input type="text" class="form-control option-edit d-none" value="@Model.Text" />
    </td>
    <td>
        <span class="vote-count">@Model.VoteCount</span>
    </td>
    <td>
        <div class="progress">
            <div class="progress-bar bg-success percentage-bar" role="progressbar" style="width: 0%;"
                 aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                0%
            </div>
        </div>
    </td>
    <td>
        <div class="d-flex">
            <button class="btn btn-warning btn-sm me-2 btn-update" data-id="@Model.Id" data-pollId="@ViewData["PollId"]">
                <i class="bi bi-pencil"></i> Update
            </button>
            <button class="btn btn-danger btn-sm me-2 btn-remove" data-id="@Model.Id" data-pollId="@ViewData["PollId"]">
                <i class="bi bi-trash"></i> Remove
            </button>
            <button class="btn btn-success btn-sm d-none btn-save" data-id="@Model.Id" data-pollId="@ViewData["PollId"]">
                <i class="bi bi-check"></i> Save
            </button>
            <button class="btn btn-secondary btn-sm d-none btn-cancel" data-id="@Model.Id">
                <i class="bi bi-x"></i> Cancel
            </button>
        </div>
    </td>
</tr>
